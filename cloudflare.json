{
  "name": "voter-helper",
  "build": {
    "command": "npm run build",
    "output_directory": "dist",
    "environment": {
      "NODE_VERSION": "18"
    }
  },
  "routes": [
    {
      "pattern": "/*",
      "script": ""
    }
  ],
  "site": {
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Permissions-Policy",
            "value": "camera=(), microphone=(), geolocation=()"
          }
        ]
      }
    ]
  }
}

